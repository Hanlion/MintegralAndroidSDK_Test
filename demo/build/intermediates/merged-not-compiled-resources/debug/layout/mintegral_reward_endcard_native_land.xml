<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mintegral_reward_endcard_hor_bg">

    <RelativeLayout
        android:id="@+id/mintegral_native_ec_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/mintegral_iv_adbanner_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <com.mintegral.msdk.videocommon.view.RoundImageView
                    android:id="@+id/mintegral_iv_adbanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp" />

                <ImageView
                    android:id="@+id/mintegral_iv_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/mintegral_reward_flag_en" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/mintegral_iv_icon"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:id="@+id/mintegral_title_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mintegral_iv_icon"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/mintegral_iv_icon"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mintegral_tv_apptitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:maxEms="7"
                        android:singleLine="true"
                        android:text="title"
                        android:textColor="@color/mintegral_reward_title_textcolor"
                        android:textSize="15sp" />

                    <com.mintegral.msdk.videocommon.view.StarLevelView
                        android:id="@+id/mintegral_sv_starlevel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="("
                        android:textColor="@color/mintegral_reward_desc_textcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mintegral_tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/mintegral_reward_user"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="12345)"
                        android:textColor="@color/mintegral_reward_desc_textcolor"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/mintegral_tv_appdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mintegral_title_layout"
                    android:layout_alignBottom="@id/mintegral_iv_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@id/mintegral_cta_layout"
                    android:layout_toRightOf="@id/mintegral_iv_icon"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:minLines="3"
                    android:text="des"
                    android:textColor="@color/mintegral_reward_desc_textcolor"
                    android:textSize="12sp" />


                <LinearLayout
                    android:id="@+id/mintegral_cta_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mintegral_iv_icon"
                    android:layout_alignBottom="@id/mintegral_iv_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mintegral_tv_cta"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/mintegral_reward_shape_end_pager"
                        android:gravity="center"
                        android:text="Install Now"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/mintegral_iv_logo"
                        android:layout_width="54dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mintegral_reward_end_pager_logo" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/mintegral_iv_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="9dp"
            android:contentDescription="closeButton"
            android:src="@drawable/mintegral_reward_close_ec" />

        <ImageView
            android:id="@+id/mintegral_iv_link"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="9dp"
            android:contentDescription="noteLinkButton"
            android:src="@drawable/mintegral_reward_notice" />

    </RelativeLayout>

</RelativeLayout>