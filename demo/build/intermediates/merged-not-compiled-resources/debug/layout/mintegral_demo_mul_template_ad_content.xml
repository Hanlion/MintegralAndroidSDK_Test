<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/mintegral_demo_iv_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="#cccccc" />

    <TextView
        android:id="@+id/mintegral_demo_bt_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mintegral_demo_iv_image"
        android:layout_marginTop="10dp"
        android:background="@drawable/mintegral_shape_blue_radius_btn"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="Button"
        android:textColor="@color/mintegral_demo_white"
        android:textSize="15sp" />

</RelativeLayout>