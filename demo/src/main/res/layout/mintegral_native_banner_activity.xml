<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f2" >

    <com.mintegral.msdk.out.MTGBannerView
        android:id="@+id/mintegral_banner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/mobivsta_demo_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_bid_banner"
            android:layout_weight="1"
            android:textColor="@color/mintegral_demo_white"
            android:textStyle="bold"
            android:text="bidBanner"
            android:background="@color/mintegral_demo_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>



        <Button
            android:id="@+id/bt_load_banner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/mintegral_demo_orange"
            android:text="getBanner"
            android:textColor="@color/mintegral_demo_white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>